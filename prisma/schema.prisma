generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id String @id @default(cuid())

  title     String
  chordKey  String
  lyrics    String
  assignees TeamMember[]
  sources   String[]

  collections SongCollection[]

  createdBy     String
  createdByName String

  updatedBy     String?
  updatedByName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([title, chordKey]) // title-chordKey must be unique
  @@index([title])
  @@index([createdBy])
}

model TeamMember {
  id          String  @id @default(cuid())
  name        String  @unique
  designation String
  imageUrl    String?
  isTrainee   Boolean @default(false)

  userAccountId String? // will have a value if linked to a user account

  assignedSongs Song[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userAccountId])
}

model SongCollection {
  id   String @id @default(cuid())
  name String @unique

  songs Song[]

  createdBy     String
  createdByName String

  updatedBy     String?
  updatedByName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
